# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置
DB_PATH=./data/wecombot.db

# 文件存储配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,docx,md

# 向量模型配置
VECTOR_MODEL_PATH=./models/bge-small-zh-v1.5
VECTOR_DIMENSION=512
FAISS_INDEX_PATH=./data/faiss_index

# LLM配置
LLM_MODEL_PATH=./models/qwen-0.5b
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7

# 企业微信配置
WECOM_CORP_ID=your_corp_id
WECOM_CORP_SECRET=your_corp_secret
WECOM_AGENT_ID=your_agent_id
WECOM_TOKEN=your_token
WECOM_ENCODING_AES_KEY=your_encoding_aes_key

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/wecombot.log

# 文本处理配置
CHUNK_SIZE=300
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_QUERY=5

# API配置
API_RATE_LIMIT=100
API_TIMEOUT=30000
