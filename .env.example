# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置
DB_PATH=./data/personal-ai-assistant.db

# 文件存储配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,docx,md

# 向量模型配置
VECTOR_MODEL_PATH=./models/bge-small-zh-v1.5
VECTOR_DIMENSION=512
FAISS_INDEX_PATH=./data/faiss_index

# LLM配置
LLM_MODEL_PATH=./models/qwen-0.5b
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/wecombot.log

# 文本处理配置
CHUNK_SIZE=300
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_QUERY=5

# API配置
API_RATE_LIMIT=100
API_TIMEOUT=30000

# 第三方API配置示例

# 第三方API默认配置
THIRD_PARTY_DEFAULT_PROVIDER=openai
THIRD_PARTY_FALLBACK_TO_LOCAL=true
THIRD_PARTY_RETRY_ATTEMPTS=3

# === OpenAI 配置 ===
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# === Azure OpenAI 配置 ===
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_MAX_TOKENS=4096
AZURE_OPENAI_TEMPERATURE=0.7

# === Anthropic Claude 配置 ===
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_BASE_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# === 百度文心一言 配置 ===
BAIDU_API_KEY=your_baidu_api_key_here
BAIDU_SECRET_KEY=your_baidu_secret_key_here
BAIDU_MODEL=ernie-speed-128k
BAIDU_MAX_TOKENS=4096
BAIDU_TEMPERATURE=0.7

# === 阿里云通义千问 配置 ===
QWEN_API_KEY=your_qwen_api_key_here
QWEN_MODEL=qwen-turbo
QWEN_MAX_TOKENS=4096
QWEN_TEMPERATURE=0.7

# === 智谱AI GLM 配置 ===
ZHIPU_API_KEY=your_zhipu_api_key_here
ZHIPU_MODEL=glm-4-flash
ZHIPU_MAX_TOKENS=4096
ZHIPU_TEMPERATURE=0.7

# === 月之暗面 Kimi 配置 ===
KIMI_API_KEY=your_kimi_api_key_here
KIMI_MODEL=moonshot-v1-8k
KIMI_MAX_TOKENS=4096
KIMI_TEMPERATURE=0.7

# === 字节跳动豆包 配置 ===
DOUBAO_API_KEY=your_doubao_api_key_here
DOUBAO_MODEL=doubao-pro-4k
DOUBAO_MAX_TOKENS=4096
DOUBAO_TEMPERATURE=0.7

# === 腾讯混元 配置 ===
HUNYUAN_SECRET_ID=your_hunyuan_secret_id_here
HUNYUAN_SECRET_KEY=your_hunyuan_secret_key_here
HUNYUAN_MODEL=hunyuan-pro
HUNYAN_MAX_TOKENS=4096
HUNYUAN_TEMPERATURE=0.7

# === 其他配置 ===
# 数据库配置
DB_PATH=./data/database/wecombot.db

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,docx,md

# 向量模型配置
VECTOR_MODEL_PATH=./models/bge-small-zh-v1.5
VECTOR_DIMENSION=512
FAISS_INDEX_PATH=./data/vectors/vector_data.json

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/wecombot.log

